{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cortex-debug",
            "request": "launch",
            "name": "ARM Simulator",
            "cwd": "${workspaceRoot}",
            "executable": "./build/firmware.elf",
            "servertype":"qemu",
            "cpu": "cortex-m4",
            "machine": "STM32F4-Discovery",
            "serverpath": "${config:qemu-system-arm}",
            "runToMain": false,
            "overrideGDBServerStartedRegex": "(qemu)",
            "postStartSessionCommands": ["advance Main"]
        }
    ]
}